extends ../common/layout


block css
  link(rel="stylesheet", href="/css/admin.css" , type="text/css")

block layout-content

  .admin-container
    a.btn-home(href="/") Homepage
    a.btn-logout(href="/admin/logout") Logout

  h1 Welcome! Administer

  .table-container
    a(href="/admin/adds") + Add new skill
    table 
      thead 
        tr 
          th Skill
          th Operation
      tbody 
        each skill in skills
          tr 
            td  #{skill.name} (#{skill.category})
            td
              form(action="/admin/deletes")
                input(type="hidden", name="skillId", value=skill._id)
                button(type="submit") Delete

  .table-container
    a(href="/admin/addp") + Add new project
    table 
      thead 
        tr 
          th Project
          th Operation
      tbody 
        each project in projects
          tr 
            td  #{project.title} (#{project.description})
            td
              form(action="/admin/deletep")
                input(type="hidden", name="projectId", value=project._id)
                button(type="submit") Delete
